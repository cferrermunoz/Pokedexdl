<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#BFBFBF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/fire">


            <ImageView
                android:id="@+id/imvPhoto"
                android:layout_width="148dp"
                android:layout_height="142dp"
                android:layout_row="0"
                android:layout_rowSpan="3"
                android:layout_column="3"
                android:src="@drawable/img"
                android:background="@drawable/round"></ImageView>

            <TextView
                android:id="@+id/txvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:padding="10dp"
                android:text="Charmander"
                android:textSize="19dp"
                ></TextView>

            <TextView
                android:id="@+id/txvId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:text="#004"
                android:textAlignment="textEnd"
                android:textSize="30dp"
                ></TextView>
            <TextView
                android:id="@+id/txvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="Lizard Poekmon"
                ></TextView>
            <CheckBox
                android:id="@+id/chbFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:checked="false">
            </CheckBox>
            <TextView
                android:id="@+id/txvtype1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_row="2"
                android:background="@drawable/fire"
                android:text="  Fire  "
                android:textSize="40dp"/>
            <TextView
                android:id="@+id/txvtype2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:background="@drawable/fire"
                android:text="  Fire  "
                android:textSize="40dp"
                />
        </GridLayout>
        <TextView
            android:id="@+id/txvTitleSpieces"
            android:text="Species"
            android:textSize="28dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/roundrectangle"
            >
            <TextView
                android:id="@+id/txvDesc"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:text="Charmander is a small, bipedal, dinosaur like PokÃ©mon. Most of its body is colored orange, while its underbelly is a light yellow color. Charmander, along with all of its evolved forms, has a flame that is constantly burning on the end of its tail."
                android:background="@drawable/roundrectangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"></TextView>
            <TextView
                android:id="@+id/txvheight"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@drawable/roundrectangle"
                android:text="0,6 m"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:padding="5dp"
                ></TextView>
            <TextView
                android:layout_row="1"
                android:layout_column="1"
                android:background="@drawable/roundrectangle"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:text="8,5 kg"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:id="@+id/txvweight"
                android:padding="5dp"></TextView>
            <TextView
                android:layout_row="2"
                android:layout_column="0"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textAlignment="center"></TextView>
            <TextView
                android:layout_row="2"
                android:layout_column="1"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textAlignment="center"></TextView>
        </GridLayout>
        <TextView
            android:layout_row="3"
            android:layout_column="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abilities"
            android:textSize="28dp"
            android:textAlignment="center"></TextView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundrectangle">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="true"
                android:background="@drawable/roundrectangle"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Overgrow"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    />
                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/info"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="true"
                android:background="@drawable/roundrectangle"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Shell Armor"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:padding="5dp"/>
                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/info"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Base Stats"
            android:textSize="28dp"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundrectangle"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txvHP"
                android:width="10dp"
                android:background="@drawable/roundrectangle"
                android:text="HP"
                android:layout_margin="5dp"
                android:padding="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txvAttack"
                android:background="@drawable/roundrectangle"
                android:layout_margin="5dp"
                android:text="Attack"
                android:padding="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txvDefense"
                android:background="@drawable/roundrectangle"
                android:layout_margin="5dp"
                android:text="Defense"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txvSpattack"
                android:background="@drawable/roundrectangle"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text="Sp. Attack"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txvSpdefense"
                android:background="@drawable/roundrectangle"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text="Sp. Defense"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txvSpeed"
                android:background="@drawable/roundrectangle"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text="Speed"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txvTotal"
                android:text="Total: "
                android:textAlignment="center"
                android:padding="5dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evolution Chain"
            android:textSize="28dp"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/roundrectangle"
            android:padding="18dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/fire"
                android:padding="5dp"
                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/img"
                    android:scaleType="fitCenter"
                    android:id="@+id/imvDetEvc1"
                    android:background="@drawable/round"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="#001"
                    android:textAlignment="center"
                    android:id="@+id/txvDetEvc1Num"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Charmander"
                    android:id="@+id/txvDetEvc1Name"/>
                <TextView
                    android:id="@+id/txvDetEvc1Type1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:background="@drawable/fire"
                    android:text="Fire"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/txvDetEvc1Type2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:background="@drawable/fire"
                    android:text="Fire"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/next"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 18"
                    android:id="@+id/txvDetEv1"
                    android:textSize="10dp"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/fire"
                android:padding="5dp"
                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/img"
                    android:scaleType="fitCenter"
                    android:id="@+id/imvDetEvc2"
                    android:background="@drawable/round"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="#001"
                    android:textAlignment="center"
                    android:id="@+id/txvDetEvc2Num"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Charmander"
                    android:id="@+id/txvDetEvc2Name"/>
                <TextView
                    android:id="@+id/txvDetEvc2Type1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:background="@drawable/fire"
                    android:text="Fire"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/txvDetEvc2Type2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:background="@drawable/fire"
                    android:text="Fire"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/next"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 32"
                    android:textSize="10dp"
                    android:id="@+id/txvDetEv2"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/fire"
                android:padding="5dp"
                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/img"
                    android:scaleType="fitCenter"
                    android:id="@+id/imvDetEvc3"
                    android:background="@drawable/round"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="#001"
                    android:textAlignment="center"
                    android:id="@+id/txvDetEvc3Num"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Charmander"
                    android:id="@+id/txvDetEvc3Name"/>
                <TextView
                    android:id="@+id/txvDetEvc3Type1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:background="@drawable/fire"
                    android:text="Fire"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/txvDetEvc3Type2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:background="@drawable/fire"
                    android:text="Fire"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>